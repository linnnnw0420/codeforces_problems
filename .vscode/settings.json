{
    "C_Cpp.errorSquiggles": "enabled",
    "files.associations": {
        "vector": "cpp"
    },
    // Make Code Runner compile+run C++ with C++23
    "code-runner.runInTerminal": true,
    "code-runner.executorMap": {
        "cpp": "cd $dir && /usr/bin/clang++ -std=c++23 -I \"$workspaceRoot\" -Wall -g $fileName -o $fileNameWithoutExt && ( ./$fileNameWithoutExt; ret=$?; rm -rf \"$fileNameWithoutExt\" \"$fileNameWithoutExt.dSYM\" \"$fileNameWithoutExt.bin\" \"$fileNameWithoutExt.txt\"; exit $ret )"
    },
    // Vim parity with ~/.vimrc snippet
    "editor.lineNumbers": "relative",
    "search.smartCase": true,
    "vim.ignorecase": true,
    "vim.smartcase": true,
    "vim.incsearch": true,
    "vim.normalModeKeyBindingsNonRecursive": [
